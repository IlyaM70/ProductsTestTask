@model HomeViewModel
@{
    ViewData["Title"] = "Продукты";
}

<div class="text-center">
    <h1 class="display-4">Продукты</h1>
</div>

<div class="mt-3 container-xl">
    <label>Показать продукты из категории:</label>
    <form сlass="" asp-controller="Home" asp-action="Index" method="post">
        <div class="mt-2 d-flex">
            <select class="form-select w-25"asp-for="CategoryId" asp-items="ViewBag.Categories"></select>
            <button class="ms-2 btn btn-primary">Применить</button>
        </div>
    </form>
    <a class="mt-2" asp-controller="Home" asp-action="Index">Сбросить</a>
</div>


<div class="mt-3 container-xl">
    <table class="table">
          <thead>
            <tr>
              <th scope="col">Продукт</th>
              <th scope="col">Категория</th>
            </tr>
          </thead>
          <tbody>
            
            @foreach (var item in Model.Products)
            {
                <tr>
                    <td>@item.Product.Name</td>
                    <td>@item.Category.Name</td>
                </tr>
            }
            
          </tbody>
    </table>
</div>
